@model HarmoniBackendAdmin.Models.Product

@{
    ViewData["Title"] = "Produkter";
}

<h1>Produkt</h1>

<div>
    <h2>Är du säker på att du vill radera?</h2>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductCategory)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductCategory)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductImageName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductImageName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ApiKeyReq)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ApiKeyReq)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Radera" class="btn btn-dark m-2" /> |
        <a class="btn btn-dark m-2" asp-action="Index">Tillbaka till alla produkter</a>
    </form>
</div>
