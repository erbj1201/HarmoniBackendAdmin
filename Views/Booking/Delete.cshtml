@model HarmoniBackendAdmin.Models.Booking

@{
    ViewData["Title"] = "Bokningar";
}

<h1>Bokning</h1>
<div>
    <h2>Är du säker på att du vill radera?</h2>
   
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BookingName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookingName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BookingEmail)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookingEmail)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BookingPhone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookingPhone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BookingDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookingDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Treatments)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Treatments.TreatmentName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Radera" class="btn btn-dark m-2" /> |
        <a class="btn btn-dark m-2" asp-action="Index">Tillbaka till alla bokningar</a>
    </form>
</div>
