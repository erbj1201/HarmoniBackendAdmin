@model HarmoniBackendAdmin.Models.Treatment

@{
    ViewData["Title"] = "Behandlingar";
}

<h1>Behandling</h1>

<h4>Lägg till behandling</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TreatmentName" class="control-label"></label>
                <input asp-for="TreatmentName" class="form-control" />
                <span asp-validation-for="TreatmentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TreatmentDescription" class="control-label"></label>
                <input asp-for="TreatmentDescription" class="form-control" />
                <span asp-validation-for="TreatmentDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TreatmentPrice" class="control-label"></label>
                <input asp-for="TreatmentPrice" class="form-control" />
                <span asp-validation-for="TreatmentPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TreatmentCategory" class="control-label"></label>
                <select asp-for="TreatmentCategory" class="form-control mb-3" />
                <option value="Spa">Spa</option>
                <option value="Ansiktsbehandling">Ansiktsbehandling</option>
                <option value="Massage">Massage</option>
                <option value="Skrubb">Skrubb</option>
                <option value="Övrigt">Övrigt</option>
                <span asp-validation-for="TreatmentCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TreatmentImageFile" class="control-label"></label>
                <input asp-for="TreatmentImageFile" class="form-control" accept="image/*" />
                <span asp-validation-for="TreatmentImageName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lägg till behandling" class="btn btn-dark m-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-dark m-2" asp-action="Index">Tillbaka till alla behandlingar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
